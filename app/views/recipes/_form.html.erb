<% if @recipe.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@recipe.errors.count, "error") %>
      prohibited this recipe from being saved:
    </h2>
 
    <ul>
    <% @recipe.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @recipe do |f| %>
<br>

<div class="form-group">
<%= f.label :title %>
<%= f.text_field :title %> <br>
</div>

<div class="form-group">
<%= f.label :cooking_time %>
<%= f.text_field :cooking_time %> <br>
</div>

<div class="form-group">
<%= f.label :instructions %><br>
<%= f.text_area :instructions %> 
</div>

<br>

<% if !@category%>
<p>Select an existing category</p>
<%= f.collection_select(:category_id, current_user.categories, :id, :name, include_blank: true) %>

<p>Or create a new one</p>

<%= f.fields_for :category, @recipe.build_category  do |uf|%>
    
<%= uf.label :name  %>
<%= uf.text_field :name %>
<% end %>

<% else %>

<%= f.hidden_field :category_id%>

<% end %>

<%= f.submit "Submit" %>

<% end %>

